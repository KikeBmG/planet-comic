{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["app/components/*"],
      "@pages/*": ["app/pages/*"],
      "@locales/*": ["app/locales/*"],
      "@utils/*": ["app/utils/*"],
    },
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
  },
  "exclude": ["node_modules", "dist"]
}